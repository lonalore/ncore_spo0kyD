{
  "manifest_version": 3,
  "name": "nCore - Halloween",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "19": "assets/images/icon19.png",
      "38": "assets/images/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ncore.pro/*",
        "https://*.ncore.pro/*"
      ],
      "js": [
        "assets/js/content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://ncore.pro/*",
    "https://*.ncore.pro/*"
  ]
}
